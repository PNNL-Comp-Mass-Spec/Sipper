<Window
    x:Class="Sipper.View.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1"
    Width="300"
    Height="300">
    <StackPanel>
        <Border
            Background="#DCE2E4"
            BorderBrush="SteelBlue"
            BorderThickness="5"
            CornerRadius="25">
            <TextBlock
                Margin="6"
                HorizontalAlignment="Center"
                FontSize="14"
                Foreground="#1B3A6E">
                Result info
            </TextBlock>
        </Border>
        <Rectangle
            Name="rectangle1"
            Height="1"
            Stroke="Black" />
    </StackPanel>
</Window>
