<Window x:Class="Sipper.View.AutoprocessorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AutoprocessorWindow" x:Name="window" 
        AllowDrop="True"
        Drop="FileDropHandler"
        SizeToContent="WidthAndHeight" >
        
    <Canvas Name="canvas1" Width="658" Height="519">
        <Border
         Name="border1"
         Width="366"
         Height="176"
         Canvas.Left="48"
         Canvas.Top="46"
         BorderBrush="Silver"
         BorderThickness="4"
         CornerRadius="10" 
         
            >
            <TextBlock
            Name="textBlock1"
            Width="196"
            Height="56"
            HorizontalAlignment="Center"
            
                FontFamily="Tahoma"
            FontSize="18"
            FontWeight="Bold"
            Foreground="#6B4D4D34"
            Text="Drag and drop files here..."
            TextWrapping="Wrap" VerticalAlignment="Center" Margin="0" />
            

        </Border>
    <TextBox Canvas.Left="48" Canvas.Top="251" Height="44" Name="txtDataFilePath" Width="366" 
             Text="{Binding Path=DataContext.DatasetFilePath, ElementName=window, Mode=OneWay}" >
            
        </TextBox>
      <Label Canvas.Left="48" Canvas.Top="233" Content="Raw data file" Height="27" Name="label1" Width="92" />
        <TextBox Canvas.Left="48" Canvas.Top="322" Height="44" Name="txtWorkflowParameterFilepath" Width="366"
                 Text="{Binding Path=DataContext.WorkflowParametersFilePath, ElementName=window, Mode=OneWay}"/>
        <Label Canvas.Left="48" Canvas.Top="304" Content="Parameter file" Height="27" Name="label2" Width="92" />
        <TextBox Canvas.Left="48" Canvas.Top="390" Height="44" Name="txtTargetsFilePath" Width="366"
                 Text="{Binding Path=DataContext.TargetsFilePath, ElementName=window, Mode=OneWay}"/>
        <Label Canvas.Left="48" Canvas.Top="372" Content="Targets" Height="27" Name="label3" Width="92" />
        <ProgressBar Canvas.Left="134" Canvas.Top="242" Height="9" Name="progressBar1" Width="280" />
    </Canvas>
</Window>
